@model EmployeeViewModel

<div class="text-center">
    <img src="~/Files/images/@Model.ImageName" class="rounded-circle" width="100" height="100" />
</div>

<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input disabled type="text" asp-for="Name" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="Age" class="col-form-label"></label>
    <input disabled type="number" asp-for="Age" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="Address" class="col-form-label"></label>
    <input disabled type="text" asp-for="Address" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="Salary" class="col-form-label"></label>
    <input disabled type="text" asp-for="Salary" class="form-control" readonly />
</div>

<div class="form-check">
    <input asp-for="IsActive" class="form-check-input" readonly />
    <label disabled asp-for="IsActive" class="col-form-label"></label>
</div>

<div class="form-group">
    <label asp-for="Email" class="col-form-label"></label>
    <input disabled type="text" asp-for="Email" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="PhoneNumber" class="col-form-label"></label>
    <input disabled type="text" asp-for="PhoneNumber" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="HireDate" class="col-form-label"></label>
    <input disabled asp-for="HireDate" class="form-control" readonly />
</div>