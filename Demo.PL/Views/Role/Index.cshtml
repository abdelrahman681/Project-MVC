@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<br />
<br />

<a asp-controller="Role" asp-action="Create" class="btn btn-primary">Create Role</a>

<div class="row mt-5 mb-2">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-10">
            <input type="text" placeholder="Search By Name" name="name" class="form-control" />
        </div>
        <div class="col-2">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

@if(Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.RoleName)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.RoleName</td>

                    <partial model="@role.Id" name="_ButtonsPartial" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Roles</h3>
    </div>
}

